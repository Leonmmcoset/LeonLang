require("basic");
require("color");

basic.print(string:"Testing color library...");
basic.print(string:"\n");

// 测试各种颜色输出
color.print(string:"red", string:"This is red text");
color.print(string:"green", string:"This is green text");
color.print(string:"blue", string:"This is blue text");
color.print(string:"yellow", string:"This is yellow text");
color.print(string:"magenta", string:"This is magenta text");
color.print(string:"cyan", string:"This is cyan text");
color.print(string:"white", string:"This is white text");
color.print(string:"black", string:"This is black text");
basic.print(string:"\n");

// 测试亮色变体
color.print(string:"bright_red", string:"This is bright red text");
color.print(string:"bright_green", string:"This is bright green text");
color.print(string:"bright_blue", string:"This is bright blue text");
color.print(string:"bright_yellow", string:"This is bright yellow text");
color.print(string:"bright_magenta", string:"This is bright magenta text");
color.print(string:"bright_cyan", string:"This is bright cyan text");
color.print(string:"bright_white", string:"This is bright white text");
