// 测试获取带颜色的字符串
basic.print(string:"Using get_color_string:");
var(red_str) = color.get_color_string(string:"red", string:"Red string");
var(green_str) = color.get_color_string(string:"green", string:"Green string");
basic.print(var(red_str) + string:" and " + var(green_str));
basic.print(string:"\n");

// 测试带背景色的输出
basic.print(string:"Testing background colors:");
color.print_bg(string:"white", string:"red", string:"White text on red background");
color.print_bg(string:"black", string:"green", string:"Black text on green background");
color.print_bg(string:"yellow", string:"blue", string:"Yellow text on blue background");
basic.print(string:"\n");

// 列出所有可用的颜色
